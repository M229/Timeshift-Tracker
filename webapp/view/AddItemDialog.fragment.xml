<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog id="AddItemDialog" showHeader="false" horizontalScrolling="false">
        <HBox alignContent="Center" justifyContent="SpaceBetween">
            <Title text="Add item" class="sapUiSmallMargin"></Title>
            <Button icon="sap-icon://decline" press="pressAddItemDialogCloseBtn" class="sapUiSmallMarginEnd" width="100%" type="Transparent"></Button>
        </HBox>

        <HBox alignItems="Center" justifyContent="End" class="sapUiTinyMarginEnd">
            <Label text="Name"></Label>
            <Input id="AddItemDialogNameInput"></Input>
        </HBox>
        <HBox alignContent="Center" justifyContent="End" class="sapUiTinyMarginEnd">
            <Label text="Surname"></Label>
            <Input id="AddItemDialogSurnameInput"></Input>
        </HBox>

        <HBox justifyContent="Center" class="sapUiTinyMarginBottom">
            <Button type="Emphasized" text="Добавить" press="pressAddItemDialogAddBtn"></Button>
            <Button type="Emphasized" text="Log In" press="pressAddItemDialogLogInBtn" class="sapUiTinyMarginBegin"></Button>
        </HBox>
    </Dialog>
</core:FragmentDefinition>
